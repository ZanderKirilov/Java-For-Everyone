<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pink_nuances"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context="com.example.sethcohen.javaforeveryone3.Login">

    <TextView
        android:id="@+id/title_login"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="#0097A7"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/username_login"
        android:layout_gravity="center"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="@string/ins_username"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="#0097A7"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/password_login"
        android:layout_gravity="center"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/ins_password"
        android:gravity="center"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="#0097A7"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBoxRemember_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/remember_me"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#0097A7"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_Login_Login"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#0097A7"
        android:onClick="login"
        android:text="@string/login"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_register_login"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="#0097A7"
        android:textColor="@android:color/background_light"
        android:text="@string/Create_an_account"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/frgtn_pass"
        android:layout_gravity="center"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:onClick="login"
        android:padding="16dp"
        android:text="@string/forget_password"
        android:textColor="#fff"
        android:textSize="14sp"/>

</LinearLayout>
