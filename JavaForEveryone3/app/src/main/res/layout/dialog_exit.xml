<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@android:dimen/thumbnail_width"
    android:background="@drawable/pink_nuances"
    tools:context="com.example.sethcohen.javaforeveryone3.HomeScreen">

    <Button
        android:id="@+id/btn_Exit_Yes"
        android:layout_width="118dp"
        android:layout_height="55dp"
        android:background="#0097A7"
        android:text="@string/possitive"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883"
        app:layout_constraintHorizontal_bias="0.142" />
    <Button
        android:id="@+id/btn_Exit_NO"
        android:layout_width="118dp"
        android:layout_height="55dp"
        android:background="#0097A7"
        android:text="@string/negative"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883"
        app:layout_constraintHorizontal_bias="0.86" />

    <TextView
        android:id="@+id/ExitTXT"
        android:layout_width="309dp"
        android:layout_height="80dp"
        android:text="@string/exit_prompt"
        android:textIsSelectable="false"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />



</android.support.constraint.ConstraintLayout>