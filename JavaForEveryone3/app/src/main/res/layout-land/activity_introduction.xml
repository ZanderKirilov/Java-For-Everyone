<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_nuances"
    tools:context="com.example.sethcohen.javaforeveryone3.Introduction">

            <TextView
                android:id="@+id/title_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/introduction"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#0097A7"
                android:textSize="32sp"
                app:layout_constraintHorizontal_bias="0.076"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/is_picchanger"
            android:layout_gravity="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <Button
                android:id="@+id/btn_next_1_introduction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/button_not_clicked_next"
                android:text="Next"
                android:textColor="?attr/colorButtonNormal" />

        </LinearLayout>
</LinearLayout>
